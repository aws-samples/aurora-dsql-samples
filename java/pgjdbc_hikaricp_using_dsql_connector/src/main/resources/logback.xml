<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender with detailed output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Show Aurora DSQL JDBC Wrapper INFO level logs -->
    <logger name="software.amazon.dsql" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Show HikariCP INFO level logs -->
    <logger name="com.zaxxer.hikari" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Show AWS SDK INFO level logs -->
    <logger name="software.amazon.awssdk" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Show PostgreSQL JDBC driver INFO logs -->
    <logger name="org.postgresql" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
